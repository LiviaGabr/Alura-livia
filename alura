<script>
    function mostrarHistoria(secao) {
        const todasAsHistoria = document.querySelectorAll('.history-content');
        todasAsHistoria.forEach((historia) => {
            historia.classList.remove('active');
        });
        const historiaAtiva = document.getElementById(secao);
        historiaAtiva.classList.add('active');
    }
</script>

